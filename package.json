{
  "name": "vscode-laravel-goto-policy",
  "displayName": "vscode-laravel-goto-policy",
  "description": "Quickly jump to a policy class in Laravel",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-laravel-goto-policy.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "laravel-goto-policy.gotoPolicy",
        "title": "Laravel Goto Policy",
        "description": "Quickly jump to a policy class in Laravel"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Laravel Goto Policy",
      "properties": {
        "laravel_goto_policy.policyPath": {
          "type": "string",
          "default": "app/Policies"
        },
        "laravel_goto_policy.policyRegex": {
          "type": "string",
          "default": "(?<=\\$this->authorize\\()\\s*[^)]+\\s*(?=\\);)",
          "description": "Custom regex to find the policy"
        },
        "laravel_goto_policy.abilityRegex": {
          "type": "string",
          "default": "(?<=')[^']+(?=')",
          "description": "Custom regex to find the policy's ability name"
        },
        "laravel_goto_policy.argumentRegex": {
          "type": "string",
          "default": "(?<=, )\\w+::\\w+",
          "description": "Custom regex to find the policy's argument"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/n-readlines": "^1.0.3",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "n-readlines": "^1.0.1"
  }
}
